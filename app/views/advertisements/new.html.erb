<h1>New Advertisement</h1>
<div class="row">
  <div class="col-md-12">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'title here' %>
      </div>
      <div class="form-group">
        <%= f.label :copy %>
        <%= f.text_area :copy, class: 'form-control', placeholder: 'copy here' %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: 'form-control', placeholder: 'price' %>
      </div>
      <div class="form-group">
        <%= f.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>